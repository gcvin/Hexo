.curriculum-vitae {
  // display: none;
  box-sizing: border-box;
  position: fixed;
  top: $b2t-position-top;
  right: $b2t-position-right;
  z-index: $zindex-5;
  padding: 0 6px;
  width: 250px;
  background: $b2t-bg-color;
  font-size: $b2t-font-size;
  opacity: $b2t-opacity;
  color: $b2t-color;
  text-align: center;
  -webkit-transform: translateZ(0);
  transition-property: top;
  the-transition();

  +mobile() {
    display: none;
  }
  +tablet() {
    display: none;
  }

  &.curriculum-vitae-on {
    top: $b2t-position-top-on;
  }

  .curriculum-vitae-avatar {
    -webkit-border-radius: 50%;
    border-radius: 50%;
    border: 1px solid #eee;
    width: 80px;
    height: 80px;
    margin-top: -40px;
  }

  .curriculum-vitae-btn {
    display: block;
    background: #9da9dd;
    -webkit-border-radius: 3px;
    border-radius: 3px;
    width: 120px;
    margin: 0 auto 12px;
    color: $b2t-color;
  }
}
